{% extends "::base.html.twig" %}

{% block title %}Homepage - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {#<link href="https://fonts.googleapis.com/css?family=Lato:100" rel="stylesheet" type="text/css">#}
    {{ parent() }}
    <style>
    </style>
{% endblock %}

{% block body %}
    <abs>
        {% if user.adverts | length == 0 %}
            <h3>Neturiu jokių skelbimų.</h3>
        {% else %}
            {% for adv in user.adverts %}
                <div class="offer">
                    <img src="https://d30y9cdsu7xlg0.cloudfront.net/png/13694-200.png">
                    <h5><b>{{ adv.description }}</b></h5>
                    <p>{{ user.city }}</p>
                    <button class="detailsButton" name="details" onclick="location.href = '/details/{{ adv.id }}';">Daugiau</button>
                </div>
            {% endfor %}
        {% endif %}
    </abs>
{% endblock %}