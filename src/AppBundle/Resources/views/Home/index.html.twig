{% extends "::base.html.twig" %}

{% block title %}Homepage - {{ parent() }}{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Lato:100" rel="stylesheet" type="text/css">
    {{ parent() }}
    <style>
        body {
            margin: 0;
            padding: 0;
            font-weight: 100;
            font-family: 'Lato';
        }

        .title {
            margin: 20px auto;
            text-align: center;
            font-size: 96px;
        }
        .offer {
            border: 1px solid gray;
            padding: 10px;
            margin: 0 auto;
            width: 10%;
            float: left;
            height: 300px;
            margin-right: 20px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="title">2high4you</div>
    {% for offer in offers %}
        <div class="offer">
            <img src="{{ offer.image }}">
            <h3>{{ offer.name }}</h3>
            <p>{{ offer.place  }}</p>
            <button name="details" onclick="location.href = '/details/{{ offer.id }}';">Details</button>
        </div>
    {% endfor %}
{% endblock %}
